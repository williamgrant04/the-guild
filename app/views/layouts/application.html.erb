<!DOCTYPE html>
<html>
  <head>
    <title>The Guild</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "shared/flashes" %>
    <div id="nav">
      <%# render navbar %>
    </div>

    <% if !@guild.id.nil? %>
      <div id="page" style="background-image: url(<%= @guild.image.key ? cl_image_path(@guild.image.key) : "" %>);">
        <%= render "layouts/sidebar", locals: { guild: @guild, games: @games } %>
        <div id="content">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div id="page">
        <div id="content">
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
